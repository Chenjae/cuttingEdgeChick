<?xml version="1.0" encoding="UTF-8"?>
<!-- Sql Mapper -->
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.kosta.pamuk.model.mapper.RecipeMapper">
	<!-- recipe 게시물 작성 -->
	<insert id="postRecipe" parameterType="RecipeVO">
		<selectKey keyProperty="recipeNo" resultType="int" order="BEFORE">
			select recipe_seq.nextval from dual
		</selectKey>
		insert into recipe
		(recipe_no,member_id,recipe_name,write_date,category)
		values(#{recipeNo}, #{memberVO.memberId}, #{recipeName}, sysdate, #{category})
	</insert>
	<!-- recipe 게시물의 세부 content(step) 작성 -->
	<insert id="postRecipeContent">
	
	</insert>
	<!-- recipe 게시물 조회 -->
	<select id="">
	
	</select>
</mapper>










